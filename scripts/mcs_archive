#!/bin/bash

DEST='mcs:'

echo credentials backup
#rsync -avzh --delete ~/.ssh/ $DEST/backups/credentials
rsync -avzh ~/.ssh/ $DEST/backups/credentials

echo documents backup
rsync -avzh ~/Documents/solo-tiger/ $DEST/backups/Documents/solo-tiger
rsync -avzh ~/Documents/JCI/ $DEST/backups/Documents/JCI
rsync -avzh ~/Pictures/ $DEST/backups/Documents/Pictures

echo
echo git backup
cd ~/workspace/nlp-research
ssh-agent bash -c "ssh-add ~/.ssh/michaeldata;git push $DEST/backups/git/nlp-research HEAD"

cd ~/.password-store
ssh-agent bash -c "ssh-add ~/.ssh/michaeldata;git push $DEST/backups/git/password-store HEAD"
